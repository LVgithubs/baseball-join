{{> /layout/header}}

<div class="container mt-3">

    <form action="/member-join" method="post">
        <div class="input-group mb-3">
            <label class="form-label p-2">팀 이름 : </label>
            <select class="form-select" id="teamName" name="teamName">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>

            <label class="form-label p-2">선수 이름 : </label>
            <input type="text" name="memberName" id="memberName" class="form-control" placeholder="선수 이름">

            <label class="form-label p-2">포지션 : </label>
            <select class="form-select" id="position" name="position">
                <option>내야수</option>
                <option>외야수</option>
                <option>타자</option>
                <option>투수</option>
            </select>
            <button class="btn btn-outline-primary" type="submit">등록하기</button>
        </div>


    </form>
</div>
{{> /layout/footer}}